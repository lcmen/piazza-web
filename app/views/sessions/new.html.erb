<% content_for :title, t('.title') %>

<layout-columns class="columns is-centered">
  <layout-column class="column box is-5 mt-6 p-5 m-4">
    <h1 class="title has-text-centered">
      <%= t('.title') %>
    </h1>

    <%= form_with scope: :user, url: login_path, class: "is-flex is-flex-direction-column" do |f| %>
      <div class="block">
        <%= f.label :email, class: "label" %>
        <%= f.email_field :email, class: "input" %>
      </div>

      <div class="block">
        <%= f.label :password, class: "label" %>
        <%= f.password_field :password, class: "input" %>
      </div>

      <%= f.submit t('.login'), class: "button is-primary is-large is-align-self-flex-end mb-3 mt-3" %>
    <% end %>
  </layout-column>
</layout-columns>
