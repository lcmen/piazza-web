<% content_for :title, t('.title') %>

<layout-columns class="columns is-centered">
  <layout-column class="column box is-5 mt-6 p-5 m-4">
    <h1 class="title has-text-centered"><%= t('.title') %></h1>

    <%= form_with model: @user, url: sign_up_path, class: 'is-flex is-flex-direction-column' do |f| %>
      <div class="block">
        <%= f.label :name, class: 'label' %>
        <%= f.text_field :name, class: 'input' %>
      </div>

      <div class="block">
        <%= f.label :email, class: 'label' %>
        <%= f.email_field :email, class: 'input' %>
      </div>

      <div class="block">
        <%= f.label :password, class: 'label' %>
        <%= f.password_field :password, class: 'input' %>
      </div>

      <div class="block">
        <%= f.label :password_confirmation, class: 'label' %>
        <%= f.password_field :password_confirmation, class: 'input' %>
      </div>

      <%= f.submit t('.sign_up'), class: 'button is-primary is-large is-align-self-flex-end mt-3 mb-3' %>
    <% end %>
  </layout-column>
</layout-columns>
